---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';

const copyableInfo = [
  {
    title: 'Office Location',
    content: '1218 West Ave, Austin, TX 78701',
    copyText: '1218 West Ave, Austin, TX 78701',
    image: '/images/2025/04/IMG_3095-scaled.jpg',
  },
  {
    title: 'Email Our Team',
    content: 'admin@cgcsacc.org',
    copyText: 'admin@cgcsacc.org',
    image: '/images/2025/10/DSC_0010-2.jpg',
  },
];
---

<BaseLayout title="Contact Us">
  <!-- Header -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-bold text-text-dark mb-12">Contact Us</h1>

      <!-- Contact Info Cards (Copyable) -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        {copyableInfo.map((info) => (
          <button
            class="contact-copy-card relative overflow-hidden rounded-2xl h-64 group cursor-pointer text-left"
            data-copy={info.copyText}
          >
            <img
              src={info.image}
              alt={info.title}
              class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <h3 class="text-white font-bold text-lg mb-2">{info.title}</h3>
              <p class="text-accent-teal copy-text">{info.content}</p>
              <span class="copy-success hidden text-primary font-semibold">Copied!</span>
            </div>
            <!-- Click to copy hint -->
            <div class="absolute top-4 right-4 bg-black/50 text-white text-xs px-3 py-1 rounded-full opacity-0 group-hover:opacity-100 transition-opacity">
              Click to copy
            </div>
          </button>
        ))}
      </div>

      <!-- Working Hours (Plain Text) -->
      <div class="max-w-4xl mx-auto mt-8 text-center">
        <div class="bg-gray-50 rounded-2xl p-6">
          <h3 class="text-lg font-bold text-text-dark mb-2">Working Hours</h3>
          <p class="text-text-light">Monday to Friday : 9 am â€“ 5 pm</p>
          <p class="text-text-light text-sm mt-2">Weekend events available with prior reservation</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <ContactForm />
    </div>
  </section>

  <!-- Reserve Event Space CTA -->
  <section class="py-20 bg-accent-teal">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Ready to Host Your Next Event?
      </h2>
      <p class="text-white/80 text-lg mb-8">
        Book our space for your workshops, meetings, conferences, and more.
      </p>
      <a
        href="/book-event-space"
        class="inline-flex items-center gap-2 bg-white text-accent-teal px-8 py-4 rounded-full font-semibold hover:bg-gray-100 transition-colors"
      >
        Reserve Event Space
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>

  <!-- Map Section -->
  <section class="h-96 bg-gray-200 relative">
    <div id="map" class="w-full h-full"></div>
    <noscript>
      <div class="absolute inset-0 flex items-center justify-center bg-gray-100">
        <p class="text-text-light">Interactive map requires JavaScript</p>
      </div>
    </noscript>
  </section>
</BaseLayout>

<style>
  .copy-success {
    animation: fadeInOut 1.5s ease-in-out;
  }

  @keyframes fadeInOut {
    0% { opacity: 0; }
    20% { opacity: 1; }
    80% { opacity: 1; }
    100% { opacity: 0; }
  }
</style>

<script>
  function initContactCopy() {
    const copyCards = document.querySelectorAll('.contact-copy-card');

    copyCards.forEach((card) => {
      card.addEventListener('click', async () => {
        const textToCopy = card.getAttribute('data-copy');
        const copyText = card.querySelector('.copy-text') as HTMLElement;
        const copySuccess = card.querySelector('.copy-success') as HTMLElement;

        if (!textToCopy) return;

        try {
          await navigator.clipboard.writeText(textToCopy);

          // Show success message
          copyText.classList.add('hidden');
          copySuccess.classList.remove('hidden');

          // Hide success message after animation
          setTimeout(() => {
            copySuccess.classList.add('hidden');
            copyText.classList.remove('hidden');
          }, 1500);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    });
  }

  // Leaflet map initialization
  async function initMap() {
    const mapContainer = document.getElementById('map');
    if (!mapContainer) return;

    // Load Leaflet CSS
    const linkEl = document.createElement('link');
    linkEl.rel = 'stylesheet';
    linkEl.href = 'https://unpkg.com/leaflet@1.9.4/dist/leaflet.css';
    document.head.appendChild(linkEl);

    // Load Leaflet JS
    const script = document.createElement('script');
    script.src = 'https://unpkg.com/leaflet@1.9.4/dist/leaflet.js';
    script.onload = () => {
      // @ts-ignore
      const L = window.L;
      const map = L.map('map').setView([30.2729, -97.7535], 16);

      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
      }).addTo(map);

      L.marker([30.2729, -97.7535])
        .addTo(map)
        .bindPopup('<strong>CGCS</strong><br>1218 West Ave, Austin, TX 78701')
        .openPopup();
    };
    document.head.appendChild(script);
  }

  document.addEventListener('DOMContentLoaded', () => {
    initContactCopy();
    initMap();
  });
  document.addEventListener('astro:page-load', () => {
    initContactCopy();
    initMap();
  });
</script>
