---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';

const contactInfo = [
  {
    title: 'Office Location',
    content: '1218 West Ave, Austin, TX 78701',
    copyText: '1218 West Ave, Austin, TX 78701',
    link: 'https://www.google.com/maps?q=1218+West+Ave,+Austin,+TX+78701',
    linkLabel: 'Open in Maps',
    icon: 'location',
  },
  {
    title: 'Email Our Team',
    content: 'admin@cgcsacc.org',
    copyText: 'admin@cgcsacc.org',
    icon: 'email',
  },
];
---

<BaseLayout title="Contact Us">
  <!-- Header -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-bold text-text-dark mb-4">Contact Us</h1>
      <p class="text-lg text-text-light mb-12 max-w-2xl">
        Have questions about our initiatives or interested in collaborating? We'd love to hear from you.
      </p>

      <!-- Contact Info Cards + Working Hours -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-5xl mx-auto">
        {contactInfo.map((info) => (
          <div class="contact-card bg-white border border-gray-200 rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow flex flex-col">
            <div class="flex items-start gap-4 flex-1">
              <!-- Icon -->
              <div class="flex-shrink-0 w-12 h-12 bg-accent-teal/10 rounded-xl flex items-center justify-center">
                {info.icon === 'location' ? (
                  <svg class="w-6 h-6 text-accent-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                ) : (
                  <svg class="w-6 h-6 text-accent-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                )}
              </div>

              <!-- Content -->
              <div class="flex-1 min-w-0 flex flex-col">
                <h3 class="text-sm font-medium text-text-light mb-1">{info.title}</h3>
                <p class="text-text-dark font-semibold break-words">{info.content}</p>
              </div>
            </div>

            <!-- Action Buttons - Always at bottom -->
            <div class="flex flex-wrap gap-2 mt-4 pl-16">
              {info.link && (
                <a
                  href={info.link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-1.5 text-sm font-medium text-accent-teal hover:text-primary transition-colors"
                >
                  {info.linkLabel}
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              )}
              <button
                class="copy-btn inline-flex items-center gap-1.5 text-sm font-medium text-gray-500 hover:text-text-dark transition-colors"
                data-copy={info.copyText}
                aria-label={`Copy ${info.title.toLowerCase()}`}
              >
                <svg class="w-4 h-4 copy-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
                <span class="copy-label">Copy</span>
              </button>
            </div>
          </div>
        ))}

        <!-- Working Hours Card -->
        <div class="contact-card bg-white border border-gray-200 rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow">
          <div class="flex items-start gap-4">
            <div class="flex-shrink-0 w-12 h-12 bg-accent-teal/10 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-accent-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="text-sm font-medium text-text-light mb-1">Working Hours</h3>
              <p class="text-text-dark font-semibold mb-3">Mon – Fri: 9 am – 5 pm</p>
              <p class="text-text-light text-sm">Events past 5 pm or weekends available with prior reservation</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Event Space Redirect Notice -->
      <div class="bg-accent-teal/10 border border-accent-teal/30 rounded-xl p-4 mb-8 flex flex-col sm:flex-row items-start sm:items-center gap-4">
        <div class="flex-shrink-0">
          <svg class="w-6 h-6 text-accent-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="flex-1">
          <p class="text-text-dark font-medium">Looking to book our event space?</p>
          <p class="text-text-light text-sm">Use our dedicated booking form for faster processing.</p>
        </div>
        <a href="/book-event-space" class="inline-flex items-center gap-2 bg-accent-teal text-white px-4 py-2 rounded-full text-sm font-medium hover:bg-[#132c7b] transition-colors whitespace-nowrap">
          Reserve Event Space
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>

      <!-- Form Header -->
      <h2 class="text-2xl font-bold text-text-dark mb-2">Send Us a Message</h2>
      <p class="text-text-light mb-8">For general inquiries, collaboration proposals, or questions about our initiatives.</p>

      <ContactForm />
    </div>
  </section>

  <!-- Reserve Event Space CTA -->
  <section class="py-20 bg-accent-teal">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Ready to Host Your Next Event?
      </h2>
      <p class="text-white/80 text-lg mb-8">
        Book our space for your workshops, meetings, conferences, and more.
      </p>
      <a
        href="/book-event-space"
        class="inline-flex items-center gap-2 bg-white text-accent-teal px-8 py-4 rounded-full font-semibold hover:bg-[#132c7b] hover:text-white transition-colors"
      >
        Reserve Event Space
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>

  <!-- Map Section -->
  <section class="h-96 bg-gray-200">
    <iframe
      src="https://www.google.com/maps?q=1218+West+Ave,+Austin,+TX+78701&output=embed"
      width="100%"
      height="100%"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      title="CGCS Location Map"
    ></iframe>
  </section>
</BaseLayout>


<script>
  function initContactCopy() {
    const copyButtons = document.querySelectorAll('.copy-btn');

    copyButtons.forEach((btn) => {
      btn.addEventListener('click', async () => {
        const textToCopy = btn.getAttribute('data-copy');
        const label = btn.querySelector('.copy-label') as HTMLElement;

        if (!textToCopy) return;

        try {
          await navigator.clipboard.writeText(textToCopy);

          // Show success message
          if (label) {
            const originalText = label.textContent;
            label.textContent = 'Copied!';
            btn.classList.add('text-primary');

            setTimeout(() => {
              label.textContent = originalText;
              btn.classList.remove('text-primary');
            }, 1500);
          }
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    });
  }

  document.addEventListener('DOMContentLoaded', initContactCopy);
  document.addEventListener('astro:page-load', initContactCopy);
</script>
