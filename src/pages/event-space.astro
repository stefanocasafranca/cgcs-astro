---
import BaseLayout from '../layouts/BaseLayout.astro';

const roomImages = [
  { src: '/images/2025/10/DSC_0010-2.jpg', alt: 'Event Space - Main Hall' },
  { src: '/images/2025/04/IMG_3095-scaled.jpg', alt: 'Event Space - Conference Setup' },
];
---

<BaseLayout title="Event Space">
  <!-- Hero Section -->
  <section class="relative py-20 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="relative z-10">
          <p class="text-accent-orange font-medium mb-4">Impact – Empowerment – Leadership</p>
          <h1 class="text-4xl md:text-5xl font-bold text-text-dark mb-6">
            Welcome To<br />The CGCS
          </h1>
          <p class="text-lg text-text-light mb-8">
            We are the perfect place to host the most impactful events, workshops, conferences, simulations and more...
          </p>
          <a href="/book-event-space" class="btn-primary">
            Reserve Event Space
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>

        <div class="relative">
          <img
            src="/images/2025/10/DSC_0010-2.jpg"
            alt="CGCS Event Space"
            class="rounded-2xl shadow-xl w-full"
          />
          <!-- Decorative yellow circle -->
          <div class="absolute -right-8 top-1/2 -translate-y-1/2 w-48 h-48 bg-yellow rounded-full -z-10"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Room Photos Gallery -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {roomImages.map((image) => (
          <div class="overflow-hidden rounded-2xl shadow-lg">
            <img
              src={image.src}
              alt={image.alt}
              class="w-full h-80 object-cover hover:scale-105 transition-transform duration-500"
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Floor Plan Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-text-dark text-center mb-12">Floor Plan</h2>

      <div class="bg-gray-100 rounded-2xl p-8 flex items-center justify-center min-h-[400px]">
        <div class="text-center text-text-light">
          <svg class="w-16 h-16 mx-auto mb-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
          </svg>
          <p class="text-lg">Floor plan image would be displayed here</p>
          <p class="text-sm mt-2">CGCS 3rd Floor Plans</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-accent-teal">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Ready to Host Your Next Event?
      </h2>
      <p class="text-white/80 text-lg mb-8">
        Book our space for your workshops, meetings, conferences, and more.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center gap-2 bg-white text-accent-teal px-8 py-4 rounded-full font-semibold hover:bg-gray-100 transition-colors"
      >
        Reserve Event Space
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>
