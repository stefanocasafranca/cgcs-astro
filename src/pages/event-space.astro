---
import BaseLayout from '../layouts/BaseLayout.astro';

const roomImages = [
  { src: '/images/2025/10/DSC_0010-2.jpg', alt: 'Event Space - Main Hall' },
  { src: '/images/2025/04/IMG_3095-scaled.jpg', alt: 'Event Space - Conference Setup' },
];
---

<BaseLayout title="Event Space">
  <!-- Hero Section - Full Width Immersive -->
  <section class="event-hero relative h-[70vh] min-h-[500px] max-h-[800px] overflow-hidden">
    <!-- Background Image with Zoom Animation -->
    <div class="absolute inset-0 hero-image-container">
      <img
        src="/images/event-space-mural.png"
        alt="CGCS Event Space with colorful mural"
        class="hero-image w-full h-full object-cover"
      />
    </div>

    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-r from-black/70 via-black/50 to-transparent"></div>

    <!-- Content -->
    <div class="relative z-10 h-full flex items-center">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">
        <div class="max-w-2xl">
          <p class="hero-tagline text-accent-teal font-medium mb-4 text-lg tracking-wide">
            Impact – Empowerment – Leadership
          </p>
          <h1 class="hero-title text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight">
            Welcome To<br />The CGCS
          </h1>
          <p class="hero-description text-xl text-white/90 mb-10 leading-relaxed">
            The perfect place to host impactful events, workshops, conferences, simulations and more.
          </p>
          <a href="/book-event-space" class="hero-btn inline-flex items-center gap-3 bg-white text-text-dark px-8 py-4 rounded-full font-semibold text-lg hover:bg-accent-teal hover:text-white transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105">
            Reserve Event Space
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 scroll-indicator">
      <div class="w-6 h-10 border-2 border-white/50 rounded-full flex justify-center pt-2">
        <div class="w-1.5 h-3 bg-white/70 rounded-full animate-bounce"></div>
      </div>
    </div>
  </section>

  <style>
    /* Hero Image Zoom Animation + Rotation Fix */
    .hero-image {
      animation: heroZoom 20s ease-out forwards;
      transform-origin: center center;
    }

    @keyframes heroZoom {
      0% {
        transform: scale(1.05) rotate(1deg);
      }
      100% {
        transform: scale(1) rotate(1deg);
      }
    }

    /* Text Fade-in Animations */
    .hero-tagline {
      opacity: 0;
      transform: translateY(30px);
      animation: fadeSlideUp 0.8s ease-out 0.2s forwards;
    }

    .hero-title {
      opacity: 0;
      transform: translateY(30px);
      animation: fadeSlideUp 0.8s ease-out 0.4s forwards;
    }

    .hero-description {
      opacity: 0;
      transform: translateY(30px);
      animation: fadeSlideUp 0.8s ease-out 0.6s forwards;
    }

    .hero-btn {
      opacity: 0;
      transform: translateY(30px);
      animation: fadeSlideUp 0.8s ease-out 0.8s forwards;
    }

    .scroll-indicator {
      opacity: 0;
      animation: fadeIn 1s ease-out 1.2s forwards;
    }

    @keyframes fadeSlideUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fadeIn {
      to {
        opacity: 1;
      }
    }

    /* Parallax-like effect on scroll */
    .event-hero {
      background-attachment: fixed;
    }

    /* Reduced motion preference */
    @media (prefers-reduced-motion: reduce) {
      .hero-image {
        animation: none;
        transform: scale(1);
      }
      .hero-tagline,
      .hero-title,
      .hero-description,
      .hero-btn,
      .scroll-indicator {
        animation: none;
        opacity: 1;
        transform: none;
      }
    }
  </style>

  <!-- Virtual Tour Section -->
  <section class="pt-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-12">
      <h2 class="text-3xl font-bold text-text-dark text-center mb-4">Explore Our Space</h2>
      <p class="text-text-light text-center max-w-2xl mx-auto">
        Take a virtual tour of the CGCS event space. Click and drag to look around, or use the arrows to navigate.
      </p>
    </div>

    <!-- Full Width 360 Tour -->
    <div class="w-full">
      <iframe
        src="https://www.google.com/maps/embed?pb=!4v1771561561808!6m8!1m7!1sCAoSHENJQUJJaEE2d2lJcm5WcWxQVkthckNJMENwV0g.!2m2!1d30.2773004221785!2d-97.74843741137883!3f116.20997146132045!4f-4.088969489186439!5f0.7820865974627469"
        width="100%"
        height="600"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        class="w-full"
      ></iframe>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-12">

      <!-- Event Space Bento Gallery -->
      <div class="bento-gallery mt-12">
        <!-- Large featured image -->
        <div class="bento-large overflow-hidden rounded-2xl shadow-lg">
          <img
            src="/images/event-space-workshop.jpg"
            alt="CGCS Workshop Event"
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
          />
        </div>
        <!-- Two stacked images -->
        <div class="bento-stack">
          <div class="overflow-hidden rounded-2xl shadow-lg">
            <img
              src="/images/event-space-meeting.jpg"
              alt="CGCS Meeting Room"
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
            />
          </div>
          <div class="overflow-hidden rounded-2xl shadow-lg">
            <img
              src="/images/event-space-hall.jpg"
              alt="CGCS Main Hall"
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
            />
          </div>
        </div>
      </div>

      <style>
        .bento-gallery {
          display: grid;
          grid-template-columns: 1fr;
          gap: 1rem;
        }

        .bento-large {
          height: 400px;
        }

        .bento-stack {
          display: grid;
          grid-template-columns: 1fr 1fr;
          gap: 1rem;
        }

        .bento-stack > div {
          height: 250px;
        }

        @media (min-width: 768px) {
          .bento-gallery {
            grid-template-columns: 2fr 1fr;
            gap: 1.5rem;
          }

          .bento-large {
            height: 520px;
          }

          .bento-stack {
            grid-template-columns: 1fr;
            gap: 1.5rem;
          }

          .bento-stack > div {
            height: calc((520px - 1.5rem) / 2);
          }
        }
      </style>
    </div>
  </section>

  <!-- Room Photos Gallery -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {roomImages.map((image) => (
          <div class="overflow-hidden rounded-2xl shadow-lg">
            <img
              src={image.src}
              alt={image.alt}
              class="w-full h-80 object-cover hover:scale-105 transition-transform duration-500"
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-accent-teal">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Ready to Host Your Next Event?
      </h2>
      <p class="text-white/80 text-lg mb-8">
        Book our space for your workshops, meetings, conferences, and more.
      </p>
      <a
        href="/book-event-space"
        class="inline-flex items-center gap-2 bg-white text-accent-teal px-8 py-4 rounded-full font-semibold hover:bg-gray-100 transition-colors"
      >
        Reserve Event Space
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>

  <!-- Map Section -->
  <section class="h-96 bg-gray-200">
    <iframe
      src="https://www.google.com/maps?q=1218+West+Ave,+Austin,+TX+78701&output=embed"
      width="100%"
      height="100%"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      title="CGCS Location Map"
    ></iframe>
  </section>
</BaseLayout>
