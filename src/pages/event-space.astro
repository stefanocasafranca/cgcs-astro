---
import BaseLayout from '../layouts/BaseLayout.astro';

const roomImages = [
  { src: '/images/2025/10/DSC_0010-2.jpg', alt: 'Event Space - Main Hall' },
  { src: '/images/2025/04/IMG_3095-scaled.jpg', alt: 'Event Space - Conference Setup' },
];
---

<BaseLayout title="Event Space">
  <!-- Hero Section -->
  <section class="relative py-20 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="relative z-10">
          <p class="text-accent-orange font-medium mb-4">Impact – Empowerment – Leadership</p>
          <h1 class="text-4xl md:text-5xl font-bold text-text-dark mb-6">
            Welcome To<br />The CGCS
          </h1>
          <p class="text-lg text-text-light mb-8">
            We are the perfect place to host the most impactful events, workshops, conferences, simulations and more...
          </p>
          <a href="/book-event-space" class="btn-primary">
            Reserve Event Space
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>

        <div class="relative">
          <img
            src="/images/2025/10/DSC_0010-2.jpg"
            alt="CGCS Event Space"
            class="rounded-2xl shadow-xl w-full"
          />
          <!-- Decorative yellow circle -->
          <div class="absolute -right-8 top-1/2 -translate-y-1/2 w-48 h-48 bg-yellow rounded-full -z-10"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Virtual Tour Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-text-dark text-center mb-4">Explore Our Space</h2>
      <p class="text-text-light text-center mb-12 max-w-2xl mx-auto">
        Take a virtual tour of the CGCS event space. Click and drag to look around, or use the arrows to navigate.
      </p>

      <div class="rounded-2xl overflow-hidden shadow-xl">
        <iframe
          src="https://www.google.com/maps/embed?pb=!4v1771561561808!6m8!1m7!1sCAoSHENJQUJJaEE2d2lJcm5WcWxQVkthckNJMENwV0g.!2m2!1d30.2773004221785!2d-97.74843741137883!3f116.20997146132045!4f-4.088969489186439!5f0.7820865974627469"
          width="100%"
          height="500"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          class="w-full"
        ></iframe>
      </div>

      <!-- Event Space Bento Gallery -->
      <div class="bento-gallery mt-12">
        <!-- Large featured image -->
        <div class="bento-large overflow-hidden rounded-2xl shadow-lg">
          <img
            src="/images/event-space-workshop.jpg"
            alt="CGCS Workshop Event"
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
          />
        </div>
        <!-- Two stacked images -->
        <div class="bento-stack">
          <div class="overflow-hidden rounded-2xl shadow-lg">
            <img
              src="/images/event-space-meeting.jpg"
              alt="CGCS Meeting Room"
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
            />
          </div>
          <div class="overflow-hidden rounded-2xl shadow-lg">
            <img
              src="/images/event-space-hall.jpg"
              alt="CGCS Main Hall"
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
            />
          </div>
        </div>
      </div>

      <style>
        .bento-gallery {
          display: grid;
          grid-template-columns: 1fr;
          gap: 1rem;
        }

        .bento-large {
          height: 400px;
        }

        .bento-stack {
          display: grid;
          grid-template-columns: 1fr 1fr;
          gap: 1rem;
        }

        .bento-stack > div {
          height: 250px;
        }

        @media (min-width: 768px) {
          .bento-gallery {
            grid-template-columns: 2fr 1fr;
            gap: 1.5rem;
          }

          .bento-large {
            height: 520px;
          }

          .bento-stack {
            grid-template-columns: 1fr;
            gap: 1.5rem;
          }

          .bento-stack > div {
            height: calc((520px - 1.5rem) / 2);
          }
        }
      </style>
    </div>
  </section>

  <!-- Room Photos Gallery -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {roomImages.map((image) => (
          <div class="overflow-hidden rounded-2xl shadow-lg">
            <img
              src={image.src}
              alt={image.alt}
              class="w-full h-80 object-cover hover:scale-105 transition-transform duration-500"
            />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-accent-teal">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Ready to Host Your Next Event?
      </h2>
      <p class="text-white/80 text-lg mb-8">
        Book our space for your workshops, meetings, conferences, and more.
      </p>
      <a
        href="/contact"
        class="inline-flex items-center gap-2 bg-white text-accent-teal px-8 py-4 rounded-full font-semibold hover:bg-gray-100 transition-colors"
      >
        Reserve Event Space
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>
