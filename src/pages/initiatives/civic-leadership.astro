  <script>
    // Animated close function for modals
    function closeWithAnimation(modal: HTMLDialogElement) {
      modal.classList.add('closing');
      modal.addEventListener('animationend', () => {
        modal.classList.remove('closing');
        modal.close();
      }, { once: true });
    }

    // Custom modals that handle their own close
    const customModals = ['simulations-modal', 'workshop-modal', 'partnership-modal'];

    // Open modal on button click
    document.querySelectorAll('[data-modal]').forEach((btn) => {
      btn.addEventListener('click', () => {
        const modalId = (btn as HTMLElement).dataset.modal;
        const modal = document.getElementById(modalId!) as HTMLDialogElement;
        modal?.showModal();
      });
    });

    // Close modal on X button click (exclude custom modals which handle their own)
    document.querySelectorAll('.modal-close').forEach((btn) => {
      const dialog = btn.closest('dialog') as HTMLDialogElement;
      if (customModals.includes(dialog?.id)) return;

      btn.addEventListener('click', () => {
        closeWithAnimation(dialog);
      });
    });

    // Close modal on backdrop click (exclude custom modals which handle their own)
    document.querySelectorAll('dialog').forEach((dialog) => {
      if (customModals.includes(dialog.id)) return;

      dialog.addEventListener('click', (e) => {
        if (e.target === dialog) {
          closeWithAnimation(dialog as HTMLDialogElement);
        }
      });
    });
  </script>

