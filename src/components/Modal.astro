---
interface AccordionItem {
  title: string;
  description: string;
  details?: string[];
  meta?: { label: string; value: string }[];
}

interface Props {
  id: string;
  title: string;
  image?: string;
  description: string;
  highlights?: string[];
  lookingAhead?: string;
  accordionItems?: AccordionItem[];
  stats?: { label: string; value: string }[];
}

const { id, title, image, description, highlights, lookingAhead, accordionItems, stats } = Astro.props;
---

<dialog id={id} class="modal">
  <div class="modal-content">
    <button class="modal-close" aria-label="Close modal">&times;</button>

    {image && (
      <div class="modal-hero">
        <img src={image} alt={title} class="modal-image" loading="lazy" decoding="async" />
      </div>
    )}

    <div class="modal-body">
      <h2 class="modal-title">{title}</h2>
      <p class="modal-description">{description}</p>

      {stats && stats.length > 0 && (
        <div class="modal-stats">
          {stats.map((stat) => (
            <div class="stat-item">
              <span class="stat-value">{stat.value}</span>
              <span class="stat-label">{stat.label}</span>
            </div>
          ))}
        </div>
      )}

      {highlights && highlights.length > 0 && (
        <div class="modal-section">
          <h3>Highlights</h3>
          <ul>
            {highlights.map((highlight) => (
              <li>{highlight}</li>
            ))}
          </ul>
        </div>
      )}

      {accordionItems && accordionItems.length > 0 && (
        <div class="modal-accordions">
          {accordionItems.map((item, index) => (
            <details class="accordion-item">
              <summary class="accordion-header">
                <span class="accordion-title">{item.title}</span>
                <svg class="accordion-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </summary>
              <div class="accordion-content">
                <p class="accordion-description">{item.description}</p>
                {item.meta && item.meta.length > 0 && (
                  <div class="accordion-meta">
                    {item.meta.map((m) => (
                      <span class="meta-badge">
                        <strong>{m.label}:</strong> {m.value}
                      </span>
                    ))}
                  </div>
                )}
                {item.details && item.details.length > 0 && (
                  <ul class="accordion-details">
                    {item.details.map((detail) => (
                      <li>{detail}</li>
                    ))}
                  </ul>
                )}
              </div>
            </details>
          ))}
        </div>
      )}

      {lookingAhead && (
        <div class="modal-section">
          <h3>Looking Ahead</h3>
          <p>{lookingAhead}</p>
        </div>
      )}
    </div>
  </div>
</dialog>

<style>
  .modal {
    padding: 0;
    border: none;
    border-radius: 0;
    width: 100vw;
    max-width: 100vw;
    height: 100vh;
    max-height: 100vh;
    overflow: hidden;
    box-shadow: none;
    margin: 0;
  }

  .modal::backdrop {
    background: rgba(0, 0, 0, 0.7);
    animation: backdropFadeIn 0.2s ease-out forwards;
  }

  .modal[open] {
    animation: modalFadeIn 0.2s ease-out forwards;
  }

  .modal.closing {
    animation: modalFadeOut 0.15s ease-in forwards;
  }

  .modal.closing::backdrop {
    animation: backdropFadeOut 0.15s ease-in forwards;
  }

  @keyframes modalFadeIn {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  @keyframes modalFadeOut {
    from {
      opacity: 1;
      transform: scale(1);
    }
    to {
      opacity: 0;
      transform: scale(0.95);
    }
  }

  @keyframes backdropFadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes backdropFadeOut {
    from { opacity: 1; }
    to { opacity: 0; }
  }

  .modal-content {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100vh;
    max-height: 100vh;
  }

  .modal-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: 3.5rem;
    height: 3.5rem;
    border: none;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 50%;
    font-size: 2rem;
    font-weight: 300;
    cursor: pointer;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s, transform 0.2s;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.2);
  }

  .modal-close:hover {
    background: white;
    transform: scale(1.1);
  }

  .modal-hero {
    width: 100%;
    height: 33vh;
    flex-shrink: 0;
    overflow: hidden;
    background: #f3f4f6;
  }

  .modal-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .modal-body {
    padding: 2rem 3rem 3rem;
    overflow-y: auto;
    flex: 1;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .modal-body::-webkit-scrollbar {
    display: none;
  }

  .modal-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 1rem;
  }

  .modal-description {
    color: #4b5563;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .modal-section {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e7eb;
  }

  .modal-section h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: #00A651;
    margin-bottom: 0.75rem;
  }

  .modal-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .modal-section li {
    position: relative;
    padding-left: 1.5rem;
    color: #4b5563;
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .modal-section li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: #00A651;
    font-weight: bold;
  }

  .modal-section p {
    color: #4b5563;
    line-height: 1.7;
  }

  /* Stats Section */
  .modal-stats {
    display: flex;
    gap: 2rem;
    margin: 1.5rem 0;
    padding: 1rem 0;
    border-top: 1px solid #e5e7eb;
    border-bottom: 1px solid #e5e7eb;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: #00A651;
  }

  .stat-label {
    font-size: 0.875rem;
    color: #6b7280;
    text-align: center;
  }

  /* Accordion Styles */
  .modal-accordions {
    margin-top: 1.5rem;
  }

  .accordion-item {
    border: 1px solid #e5e7eb;
    border-radius: 0.75rem;
    margin-bottom: 0.75rem;
    overflow: hidden;
    background: #fafafa;
  }

  .accordion-item[open] {
    background: white;
  }

  .accordion-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.25rem;
    cursor: pointer;
    list-style: none;
    user-select: none;
    transition: background 0.2s;
  }

  .accordion-header::-webkit-details-marker {
    display: none;
  }

  .accordion-header:hover {
    background: #f3f4f6;
  }

  .accordion-title {
    font-weight: 600;
    color: #1f2937;
    font-size: 1rem;
  }

  .accordion-icon {
    width: 1.25rem;
    height: 1.25rem;
    color: #6b7280;
    transition: transform 0.2s;
    flex-shrink: 0;
  }

  .accordion-item[open] .accordion-icon {
    transform: rotate(180deg);
  }

  .accordion-content {
    padding: 0 1.25rem 1.25rem;
  }

  .accordion-description {
    color: #4b5563;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .accordion-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .meta-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.75rem;
    background: #e8f5e9;
    color: #1b5e20;
    border-radius: 9999px;
    font-size: 0.8rem;
  }

  .meta-badge strong {
    color: #00A651;
  }

  .accordion-details {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .accordion-details li {
    position: relative;
    padding-left: 1.5rem;
    color: #4b5563;
    margin-bottom: 0.5rem;
    line-height: 1.5;
    font-size: 0.95rem;
  }

  .accordion-details li::before {
    content: '→';
    position: absolute;
    left: 0;
    color: #00A651;
  }

  @media (max-width: 640px) {
    .modal-body {
      padding: 1.5rem 1.5rem 2rem;
    }

    .modal-title {
      font-size: 1.5rem;
    }

    .modal-stats {
      flex-wrap: wrap;
      gap: 1rem;
    }

    .accordion-header {
      padding: 0.875rem 1rem;
    }

    .accordion-title {
      font-size: 0.95rem;
    }

    .accordion-content {
      padding: 0 1rem 1rem;
    }
  }
</style>
