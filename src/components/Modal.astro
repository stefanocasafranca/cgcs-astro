---
interface Props {
  id: string;
  title: string;
  image?: string;
  description: string;
  highlights?: string[];
  lookingAhead?: string;
}

const { id, title, image, description, highlights, lookingAhead } = Astro.props;
---

<dialog id={id} class="modal">
  <div class="modal-content">
    <button class="modal-close" aria-label="Close modal">&times;</button>

    {image && (
      <div class="modal-hero">
        <img src={image} alt={title} class="modal-image" />
      </div>
    )}

    <div class="modal-body">
      <h2 class="modal-title">{title}</h2>
      <p class="modal-description">{description}</p>

      {highlights && highlights.length > 0 && (
        <div class="modal-section">
          <h3>Highlights</h3>
          <ul>
            {highlights.map((highlight) => (
              <li>{highlight}</li>
            ))}
          </ul>
        </div>
      )}

      {lookingAhead && (
        <div class="modal-section">
          <h3>Looking Ahead</h3>
          <p>{lookingAhead}</p>
        </div>
      )}
    </div>
  </div>
</dialog>

<style>
  .modal {
    padding: 0;
    border: none;
    border-radius: 0;
    width: 100vw;
    max-width: 100vw;
    height: 100vh;
    max-height: 100vh;
    overflow: hidden;
    box-shadow: none;
    margin: 0;
  }

  .modal::backdrop {
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4px);
  }

  .modal-content {
    position: relative;
    display: flex;
    flex-direction: column;
    height: 100vh;
    max-height: 100vh;
  }

  .modal-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: 2.5rem;
    height: 2.5rem;
    border: none;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 50%;
    font-size: 1.5rem;
    cursor: pointer;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s, transform 0.2s;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  }

  .modal-close:hover {
    background: white;
    transform: scale(1.1);
  }

  .modal-hero {
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: #f3f4f6;
  }

  .modal-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .modal-body {
    padding: 2rem 3rem 3rem;
    overflow-y: auto;
    flex: 1;
  }

  .modal-title {
    font-size: 1.75rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 1rem;
  }

  .modal-description {
    color: #4b5563;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .modal-section {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e7eb;
  }

  .modal-section h3 {
    font-size: 1.125rem;
    font-weight: 600;
    color: #00A651;
    margin-bottom: 0.75rem;
  }

  .modal-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .modal-section li {
    position: relative;
    padding-left: 1.5rem;
    color: #4b5563;
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .modal-section li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: #00A651;
    font-weight: bold;
  }

  .modal-section p {
    color: #4b5563;
    line-height: 1.7;
  }

  @media (max-width: 640px) {
    .modal-body {
      padding: 1.5rem 1.5rem 2rem;
    }

    .modal-title {
      font-size: 1.5rem;
    }
  }
</style>
