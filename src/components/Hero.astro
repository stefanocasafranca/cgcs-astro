---
interface Props {
  title?: string;
  subtitle?: string;
  showButtons?: boolean;
  backgroundImage?: string;
}

const {
  title = 'Train & Empower Students\nTo Be Civic Leaders',
  subtitle,
  showButtons = true,
  backgroundImage = '/images/2025/04/IMG_3095-scaled.jpg'
} = Astro.props;
---

<section class="relative min-h-[500px] md:min-h-[600px] flex items-center">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img
      src={backgroundImage}
      alt="Hero background"
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-black/60 to-black/30"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <div class="max-w-2xl">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight whitespace-pre-line">
        {title}
      </h1>

      {subtitle && (
        <p class="mt-6 text-lg md:text-xl text-gray-200">
          {subtitle}
        </p>
      )}

      {showButtons && (
        <div class="mt-8 flex flex-wrap gap-4">
          <a href="/#initiatives" class="btn-primary">
            Learn More
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
          <a href="/event-space" class="btn-outline bg-white/10 border-white text-white hover:bg-white hover:text-text-dark">
            Reserve Space
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </a>
        </div>
      )}
    </div>
  </div>

  <!-- Decorative yellow circle -->
  <div class="absolute right-0 top-1/2 -translate-y-1/2 w-64 h-64 md:w-96 md:h-96 bg-yellow rounded-full opacity-80 translate-x-1/3 hidden lg:block"></div>
</section>
