---
interface Props {
  title?: string;
  subtitle?: string;
  showButtons?: boolean;
  backgroundImage?: string;
}

const {
  title,
  subtitle,
  showButtons = true,
  backgroundImage = '/images/FinalPic.png'
} = Astro.props;
---

<section class="relative min-h-[500px] md:min-h-[600px] flex items-center">
  <!-- Background Image -->
  <div class="absolute inset-0 z-0">
    <img
      src={backgroundImage}
      alt="Hero background"
      class="w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/40"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 w-full">
    <div class="max-w-3xl mx-auto text-center animate-fade-in-up">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white leading-tight drop-shadow-lg">
        <span class="highlight-underline relative inline-block">
          Train & Empower
          <svg class="absolute -bottom-2 left-0 w-full h-4" viewBox="0 0 500 30" preserveAspectRatio="none">
            <path d="M8,20 Q250,5 492,20"></path>
          </svg>
        </span>
        <br />
        <span>Students to be civic leaders</span>
      </h1>

      {subtitle && (
        <p class="mt-6 text-lg md:text-xl text-text-light">
          {subtitle}
        </p>
      )}

      {showButtons && (
        <div class="mt-10 flex flex-wrap justify-center gap-4">
          <a
            href="/#initiatives"
            class="bg-[#3cc9f4] hover:bg-[#132c7b] text-white px-8 py-4 rounded-full font-semibold transition-all duration-300 inline-flex items-center gap-2 text-lg"
          >
            Discover Initiatives
          </a>
          <a
            href="/event-space"
            class="bg-[#00a75d] hover:bg-[#132c7b] text-white px-8 py-4 rounded-full font-semibold transition-all duration-300 inline-flex items-center gap-2 text-lg"
          >
            Reserve Event Space
          </a>
        </div>
      )}
    </div>
  </div>
</section>
