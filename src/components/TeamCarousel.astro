---
const teamMembers = [
  { name: 'Bryan Port', role: 'Director, CGCS', image: '/images/2025/12/pexels-mikhail-nilov-9158772-scaled.jpg' },
  { name: 'Sarah Hakala', role: 'Strategic Planner and Graphic Designer', image: '/images/2025/12/pexels-mikhail-nilov-9158772-scaled.jpg' },
  { name: 'Marisela Perez', role: 'Strategic Planner', image: '/images/2025/12/pexels-mikhail-nilov-9158772-scaled.jpg' },
  { name: 'Austin Wells', role: 'Strategic Planner', image: '/images/2025/12/pexels-mikhail-nilov-9158772-scaled.jpg' },
  { name: 'Cate Thomason', role: 'Business Operations Associate', image: '/images/2025/12/pexels-mikhail-nilov-9158772-scaled.jpg' },
  { name: 'Stefano Casafranca', role: 'Strategic Planner, UX & AI Technology', image: '/images/2025/12/pexels-mikhail-nilov-9158772-scaled.jpg' },
];
---

<section class="py-16 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="relative">
      <!-- Carousel Container -->
      <div id="team-carousel" class="overflow-hidden">
        <div id="team-track" class="flex transition-transform duration-500 ease-in-out">
          {teamMembers.map((member, index) => (
            <div class="flex-shrink-0 w-full sm:w-1/2 md:w-1/3 lg:w-1/4 px-4">
              <div class="bg-white rounded-2xl overflow-hidden shadow-lg">
                <div class="aspect-square overflow-hidden">
                  <img
                    src={member.image}
                    alt={member.name}
                    class="w-full h-full object-cover"
                  />
                </div>
                <div class="p-6 text-center">
                  <h3 class="text-xl font-bold text-text-dark">{member.name}</h3>
                  <p class="text-text-light mt-1">{member.role}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Navigation Buttons -->
      <button
        id="prev-btn"
        class="absolute left-0 top-1/2 -translate-y-1/2 -translate-x-4 w-12 h-12 bg-white rounded-full shadow-lg flex items-center justify-center hover:bg-gray-50 transition-colors z-10"
        aria-label="Previous slide"
      >
        <svg class="w-6 h-6 text-text-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>
      <button
        id="next-btn"
        class="absolute right-0 top-1/2 -translate-y-1/2 translate-x-4 w-12 h-12 bg-white rounded-full shadow-lg flex items-center justify-center hover:bg-gray-50 transition-colors z-10"
        aria-label="Next slide"
      >
        <svg class="w-6 h-6 text-text-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>
    </div>

    <!-- Dots Navigation -->
    <div id="dots-container" class="flex justify-center mt-8 gap-2">
      {teamMembers.map((_, index) => (
        <button
          class="dot w-3 h-3 rounded-full bg-gray-300 transition-colors"
          data-index={index}
          aria-label={`Go to slide ${index + 1}`}
        />
      ))}
    </div>
  </div>
</section>

<script>
  const track = document.getElementById('team-track') as HTMLElement;
  const prevBtn = document.getElementById('prev-btn');
  const nextBtn = document.getElementById('next-btn');
  const dots = document.querySelectorAll('.dot');

  let currentIndex = 0;
  const totalSlides = 6;

  function getVisibleSlides() {
    if (window.innerWidth >= 1024) return 4;
    if (window.innerWidth >= 768) return 3;
    if (window.innerWidth >= 640) return 2;
    return 1;
  }

  function updateCarousel() {
    const visibleSlides = getVisibleSlides();
    const maxIndex = Math.max(0, totalSlides - visibleSlides);
    currentIndex = Math.min(currentIndex, maxIndex);

    const slideWidth = 100 / visibleSlides;
    track.style.transform = `translateX(-${currentIndex * slideWidth}%)`;

    dots.forEach((dot, index) => {
      dot.classList.toggle('bg-primary', index === currentIndex);
      dot.classList.toggle('bg-gray-300', index !== currentIndex);
    });
  }

  prevBtn?.addEventListener('click', () => {
    if (currentIndex > 0) {
      currentIndex--;
      updateCarousel();
    }
  });

  nextBtn?.addEventListener('click', () => {
    const visibleSlides = getVisibleSlides();
    const maxIndex = Math.max(0, totalSlides - visibleSlides);
    if (currentIndex < maxIndex) {
      currentIndex++;
      updateCarousel();
    }
  });

  dots.forEach((dot) => {
    dot.addEventListener('click', () => {
      currentIndex = parseInt(dot.getAttribute('data-index') || '0');
      updateCarousel();
    });
  });

  window.addEventListener('resize', updateCarousel);
  updateCarousel();
</script>
