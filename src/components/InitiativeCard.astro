---
interface Props {
  title: string;
  description: string;
  href: string;
  icon?: 'public-service' | 'civic-leadership' | 'citizenship-tech';
}

const { title, description, href, icon = 'public-service' } = Astro.props;

const icons = {
  'public-service': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />`,
  'civic-leadership': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />`,
  'citizenship-tech': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />`,
};
---

<div class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-shadow border border-gray-100 h-full flex flex-col">
  <div class="w-16 h-16 bg-primary/10 rounded-2xl flex items-center justify-center mb-6">
    <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[icon]} />
  </div>

  <h4 class="text-xl font-bold text-text-dark mb-4">{title}</h4>

  <p class="text-text-light mb-6 leading-relaxed flex-1">
    {description}
  </p>

  <a
    href={href}
    class="inline-flex items-center gap-2 bg-[#00a75d] hover:bg-[#008a4d] text-white px-4 py-2 rounded-full text-sm font-medium transition-all mt-auto w-fit"
  >
    Learn More
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
    </svg>
  </a>
</div>
