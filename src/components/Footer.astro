<style>
  .copy-success {
    animation: fadeInOut 1.5s ease-in-out;
  }

  @keyframes fadeInOut {
    0% { opacity: 0; }
    20% { opacity: 1; }
    80% { opacity: 1; }
    100% { opacity: 0; }
  }
</style>

<script>
  function initCopyButtons() {
    const copyButtons = document.querySelectorAll('[data-copy]');

    copyButtons.forEach((button) => {
      button.addEventListener('click', async () => {
        const textToCopy = button.getAttribute('data-copy');
        const copyText = button.querySelector('.copy-text') as HTMLElement;
        const copySuccess = button.querySelector('.copy-success') as HTMLElement;

        if (!textToCopy) return;

        try {
          await navigator.clipboard.writeText(textToCopy);

          // Show success message
          copyText.classList.add('invisible');
          copySuccess.classList.remove('hidden');

          // Hide success message after animation
          setTimeout(() => {
            copySuccess.classList.add('hidden');
            copyText.classList.remove('invisible');
          }, 1500);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    });
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initCopyButtons);
  document.addEventListener('astro:page-load', initCopyButtons);
</script>
